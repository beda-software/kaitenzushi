                    "warningOnly": false
                }
            },
            {
                "operation": {
                    "type": {
                        "code": "create",
                        "system": "http://terminology.hl7.org/CodeSystem/testscript-operation-codes"
                    },
                    "resource": "Encounter",
                    "sourceId": "launched-encounter",
                    "responseId": "create-test-encounter",
                    "description": "Create fixture resource",
                    "encodeRequestUrl": false
                }
